/* components/goods-item/index.wxss */
.goods-item{
  width:600rpx;
  height:192rpx;
  background:rgba(255,255,255,1);
  border-bottom: 1rpx solid rgba(232,232,232,1);
}
.goods-item-container{
  padding-top:24rpx;
  padding-bottom: 24rpx;
  display: flex;
  flex-direction:row;
}

.goods-img{
  width:144rpx;
  height:144rpx;
  margin-right:20rpx;
  border-radius: 10rpx;
  background-color: green;
}

.goods-details{
  display: flex;
  flex-direction:column;
  flex: 1;
}

.goods-desc{
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical; 
  -webkit-line-clamp:2; 
  height:78rpx;
  font-size:27rpx;
  font-weight:500;
  color:rgba(22,23,24,1);
  line-height:42rpx;
}

.goods-content{
  height:30rpx;
  flex: 1;
}

.goods-price{
  height:30rpx;
  font-size:32rpx;
  font-weight:500;
  color:rgba(238,44,67,1);
  line-height:32rpx;
  margin-top: 28rpx;
  float: left;
}

.goods-button,.goods_button_unable{
  float: right;
  height:54rpx;
  background:rgba(238,44,67,1);
  border-radius:27rpx;
  text-align: center;
  margin-top:14rpx;
}
.goods_button_unable{
  background:rgba(255,218,222,1);
}
.goods-button text,.goods_button_unable text{
  padding:0 35rpx;
  height:23rpx;
  font-size:24rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:32rpx;
}

.goods_button_unable text{
  color:rgba(240,178,185,1);
}