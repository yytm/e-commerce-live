/* components/goods-box/index.wxss */

.goods-background{
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background-color: rgba(0,0,0,0.2)
}

.goods-box{
  position: fixed;
  z-index: 10;
  width:690rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 12px 44px 0px rgba(0, 0, 0, 0.2);
  border-radius:16rpx;

  bottom: 30rpx;
  left:50%;
  transform: translate(-50%, 0);

  display: flex;
  flex-direction:column;
}

.goods-header{
  width:602rpx;
  margin-left:44rpx;
  margin-right:44rpx;
}

.goods-title{
  height:38rpx;
  font-size:30rpx;
  font-weight:500;
  color:rgba(22,23,24,1);
  line-height:40rpx;
  float: left;
  margin-top:21rpx;
}

.goods-close{
  width:24rpx;
  height:24rpx;
  margin-top:26rpx;
  margin-bottom: 22rpx;
  float: right;
}

.goods-body{
  width:100%;
  display: flex;
  flex-direction:column;
}

.goods-list{
  height:730rpx;
  overflow-x: hidden;
  overflow-y: auto;
  padding-left: 44rpx;
  padding-right: 44rpx;
}

.goods-body .nothing{
  height:730rpx;
  display: flex;
  flex-direction:column;
}

.nothing-img{
  width:220rpx;
  height:220rpx;
  margin:0 auto;
  margin-top:122rpx;
}
.nothing-title,.nothing-desc{
  width:100%;
  height:27rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(22,23,24,1);
  line-height:32rpx;
  text-align: center;
  margin-top:27rpx;
}
.nothing-desc{
  font-size:24rpx;
  font-weight:400;
  color:rgba(178,180,185,1);
  margin-top:20rpx;
}
.nothing-refresh{
  text-align: center;
  margin-top:43rpx;
}
.nothing-refresh text{
  padding-top:23rpx;
  padding-left:33rpx;
  padding-right:33rpx;
  padding-bottom: 19rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:32rpx;

  background:rgba(238,44,67,1);
  border-radius:16rpx;
}
