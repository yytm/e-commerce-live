/* components/alert-modal/index.wxss */
.alert-box{
  position:fixed;
  width:100vw;
  height:100vh;
  top:0;
  left:0;
  z-index: 9;
  background:rgba(0,0,0,0.2);
}

.alert-container{
  position:fixed;
  width:570rpx;
  min-height:280rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 12rpx 44rpx 0px rgba(0, 0, 0, 0.2);
  border-radius:16rpx;
  left:50%;
  top:240rpx;
  transform:translate(-50%,0);
}

.alert-head{
  width:100%;
  position:relative;
  box-sizing:border-box;
  padding-top:67rpx;
  padding-left:45rpx;
  padding-right:45rpx;
}
.alert-head image{
  position:absolute;
  top:26rpx;
  right:26rpx;
  width:28rpx;
  height:28rpx;
}
.alert-head text{
  font-size:30rpx;
  font-weight:500;
  color:rgba(22,23,24,1);
  line-height:30rpx;
}
.alert-footer{
  width:100%;
  box-sizing:border-box;
  padding-left:44rpx;
  padding-right:44rpx;
  padding-bottom: 44rpx;
  padding-top:52rpx;

  display: flex;
  flex-direction:row;
  align-content:space-around;
  align-items:center;
  text-align: center;
  
}
.alert-button{
  width:231rpx;
  height:88rpx;
  line-height:88rpx;
  text-align: center;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(238,44,67,1);
  border-radius:16rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(238,44,67,1);
  margin:0 auto;
}
.left{
  margin-right:20rpx;
}
.right{
  background:rgba(238,44,67,1);
  color:rgba(255,255,255,1);
}