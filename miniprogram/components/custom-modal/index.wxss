/* components/custom-modal/index.wxss */
.modal-con {
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}
.modal-con .modal-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 999;
}
.modal-con .modal-box {
  display: flex;
  position: absolute;
  top: 160rpx;
  left: 50%;
  z-index: 1000;
  transform: translate(-50%, 0);
  -webkit-transform: translate(-50%, 0);
  width: 690rpx;
  background-color: #fff;
  border-radius: 10rpx;
  text-align: center;
  overflow: hidden;
}
.modal-con .modal-box .modal-box-input {
  font-size: 28rpx;
  width: 80%;
  margin: 20rpx auto;
  border: 1px solid #dddd;
  padding: 15rpx 10rpx;
  border-radius: 10rpx;
}
.modal-con .modal-box .show-desc {
  padding: 22rpx 64rpx 22rpx 30rpx;
  text-align: left;
  width: 426rpx;
  font-size: 28rpx;
  font-family: "PingFang SC";
  color: #212121;
  word-break: break-all;
}
.modal-con .modal-box .modal-box-input.border {
  border: 1px solid #2f94fa;
  box-shadow: 0 0 3px #2f94f4;
}

.modal-con .modal-box .btn-con {
  display: flex;
}
.modal-box .btn-con .btn {
  border-left: 1px solid #e7e7e7;
  box-shadow: 1px 0px 0px 0px rgba(231, 231, 231, 1);
  padding: 0;
  background-color: #fff;
  color: #444;
  width: 132rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal-box .btn-con .confirm-btn {
  color: #0786d7;
}
.modal-box .btn-con .cancel-btn {
  color: #f2034c;
}
.modal-box .btn-con .button-hover {
  border: none;
  background-color: #ccc !important;
}
