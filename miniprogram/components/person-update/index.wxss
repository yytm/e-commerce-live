/* components/person-update/index.wxss */
back{
  position: fixed;
  left:30rpx;
  top:87rpx;
}
.room-avatar{
  position: fixed;
  left:102rpx;
  top:87rpx;
}
.setting-room {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 1111;
}
.room-content{
  width:100vw;
  /* height:calc(100vh - 188rpx); */
  height:100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top:188rpx;
}

.mg-btn-24{
  margin-bottom: 24rpx;
}

.room-img-container{
  padding:8rpx;
  border-radius:16px;
  background-color: rgba(255, 255, 255, 0.2);
}
.room-img-icon{
  position: relative;
  width:168rpx;
  height:168rpx;
  background:rgba(235,235,235,1);
  border:8rpx solid rgba(229, 229, 229, 0.2);
  border-radius:16px;
}


.room-add-img{
  position: absolute;
  left: 50%;
  top:50%;
  transform: translate(-50%, -50%);
  width:28rpx;
  height:28rpx;
}
.cover-img{
  width:100%;
  height:100%;
  border-radius:16px;
}


.room-botton-container{
  position:fixed;
  left:50%;
  bottom:50rpx;
  transform:translate(-50%,0);
  width:570rpx;
  height:88rpx;
  line-height: 88rpx;
  text-align: center;
  background:rgba(238,44,67,1);
  border-radius:16rpx;
  color:#fff;
  font-size:28rpx;
}

.room-checkbox-container{
  width:570rpx;
  margin-top:41rpx;
  height:36rpx;
}

.room-checkbox-container .left{
  float: left;
}
.room-checkbox-container .right{
  float: right;
}


.setting-shop-img{
  position: fixed;
  z-index: 1;
  width:88rpx;
  height:88rpx;
  right:78rpx;
  bottom: 47rpx;
}

.room-feature-live{
  background:rgba(255,255,255,1);
  margin-top:20rpx;
  color:rgba(22,23,24,1);
  border:1rpx solid rgba(193,194,194,1);
}

.input-title{
  font-size:24rpx;
  font-weight:400;
  color:rgba(119,122,129,1);
  text-align:left;
  width:570rpx;
}

roomInput{
  border-bottom:1rpx solid rgba(238,238,238,1);
}

.message-icon{
  background:rgba(193,194,194,1);
  border-radius:50%;
  color:#fff;
  width:28rpx;
  height:28rpx !important;
  line-height:28rpx;
  text-align:center;
  display:inline-block !important;
  margin-top:5rpx;
}

.person-info{
    flex:1;
    margin-bottom:158rpx;
    overflow-y:auto;
}

[data-red-text]::after{
    content:attr(data-red-text);
    color:red;
    margin-left:10rpx;
}

.dropdown,.dropvalue{
  position: relative;
  width:100%;
  height:88rpx;
  line-height:88rpx;
  text-align: left;
  display: inline-block;
  font-size:28rpx;
}
[data-icon].open::after{
  content: attr(data-icon);
  position: absolute;
  font-size: 28rpx;
  color:rgba(196,199,207,1);
  top:50%;
  right: 0;
  transform: translate(0,-50%) rotate(-90deg);
}

[data-icon].close::after{
  content: attr(data-icon);
  position: absolute;
  font-size: 28rpx;
  color:rgba(196,199,207,1);
  top:50%;
  right: 0;
  transform: translate(0,-50%) rotate(90deg);
}