<!--components/room-input/index.wxml-->
<view class="room-input-container">
      <input 
        placeholder="{{placeholder}}" 
        placeholder-style='{{placeholderStyle}}'
        value="{{inputText}}"
        bindinput="holdInput"
        maxlength="{{maxlength}}"
        type="{{inputType}}"
        style="{{extStyle}}"
        disabled="{{disabled}}"
      ></input>
</view>