/* components/person-center/index.wxss */
view.body{
  background:rgba(245,247,250,1);
  width:100vw;
  height:100vh;
}
.person-background{
  position:fixed;
  top:0;
  left:0;
  width:200vw;
  height:824rpx;
  background:rgba(238,44,67,1);
  border-radius:50%;
  transform: translate(-30%,-50%);
}
.inner-background{
  width:80vw;
  height:80vw;
  background:rgba(255,93,66,1);
  border-radius:50%;
  transform: translate(50%,35%);
}
.content{
  z-index: 1;
  top:0;
  left:0;
  width:100vw;
  height:100vh;
  display: flex;
  flex-direction:column;
}
.scroll-box{
  flex:1;
  overflow-y:auto;
  margin-top:49rpx;
  padding-bottom:122rpx;
}
.header{
  width:690rpx;
  z-index: 9;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 4rpx 16rpx 0rpx rgba(0, 0, 0, 0.03);
  border-radius:16rpx;
  margin:0 auto;
  margin-top:258rpx;
  position: relative;
}
.avatar{
  position: absolute;
  width:134rpx;
  height:134rpx;
  border-radius:50%;
  left:48rpx;
  top:-52rpx;
}
.setting{
  height:82rpx;
  width:100%;
  box-sizing: border-box;
  padding-top:34rpx;
  padding-right:40rpx;
}
.setting image,.setting button{
  width:48rpx;
  height:48rpx;
  float: right;
  margin-left:40rpx;
  padding:0;
  background:none;
}

.box{
  width:100%;
  box-sizing: border-box;
  padding-left:50rpx;
  padding-right:50rpx;
  padding-top:38rpx;
  padding-bottom:24rpx;
}
.title{
  font-size:34rpx;
  font-weight:600;
  color:rgba(22,23,24,1);
}
text.job_title{
  content: attr(data-title);
  padding:9rpx 19rpx;
  background:rgba(252,240,242,1);
  border-radius:18rpx; 
  font-size:20rpx;
  font-weight:500;
  color:rgba(238,44,67,1);
  margin-left:19rpx;
  line-height:34rpx;
}
.comp{
  font-size:24rpx;
  font-weight:500;
  color:rgba(178,180,185,1);
  margin-top:22rpx;
  margin-bottom: 12rpx;
}

.icon{
  width:28rpx;
  height:28rpx;
  vertical-align:middle;
}
[data-text]::after{
  content: attr(data-text);
  font-size:24rpx;
  font-weight:400;
  color:rgba(119,122,129,1);
  line-height:28rpx;
  margin-left:28rpx;
}

.list-box{
  width:100%;
  box-sizing: border-box;
  margin-bottom:49rpx;
  padding:0 30rpx;
}
.list-box .title{
  line-height:32rpx;
}
.list-box .title text:first-child{
  font-size:32rpx;
  font-weight:600;
  color:rgba(22,23,24,1);
}
.list-box .title text:last-child{
  font-size:24rpx;
  font-weight:400;
  color:rgba(119,122,129,1);
  float: right;
}
[data-icon]::after{
  content: attr(data-icon);
  margin-left:13rpx;
  line-height:28rpx;
}


.shop-container{
  position: relative;
  height:188rpx;
  background:rgba(255,255,255,1);
  box-sizing:border-box;
  padding:20rpx;
  margin-top:14rpx;

  display: flex;
  flex-direction:row;

  border-radius:16rpx;
}

.shop-container image{
  height:148rpx;
  width:148rpx;
  margin-right:19rpx;
}
.shop-container .shop-detail-container{
  height:100%;
  display:flex;
  flex-direction:column;
  flex:1;
}
.shop-container .shop-detail-container text:first-child{
  height:80rpx;
  font-size:28rpx;
  line-height:38rpx;
  font-weight:400;
  color:rgba(22,23,24,1);
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical; 
  -webkit-line-clamp:2; 
}

.shop-container .shop-detail-container text:last-child{
  height:23rpx;
  font-size:24rpx;
  font-weight:500;
  color:rgba(238,44,67,1);
  line-height:23rpx;
  margin-top:20rpx;
}

swiper{
  height:188rpx;
}


.room-list {
  margin: 0;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}

.room-list-item {
  width: 335rpx;
  height: 425rpx;
  padding: 0;
  margin: 27rpx auto;
  color: #fff;
  border-radius: 8rpx;
  box-sizing: border-box;
  position: relative;
}
.room-list-item:nth-child(odd){
  margin: 27rpx 0;
}

.room-cover-container {
  width: 335rpx;
  height: 350rpx;
  position: absolute;
}

.room-cover{
  width: 100%;
  height: 100%;
  border-radius: 16rpx 16rpx 0 0;
}
.room-info {
  position: absolute;
  top: 0;
  padding: 10rpx 10rpx 0;
  height: 58rpx;
  display: flex;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
  background:linear-gradient(0deg,rgba(0,0,0,0.3));
  border-radius:16rpx 16rpx 0px 0px;
}
.room-info-bot {
  position: absolute;
  bottom: 10rpx;
  padding: 10rpx 10rpx 0;
  height: 58rpx;
  display: flex;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
  background:linear-gradient(0deg,rgba(0,0,0,0.3));
}
.replay-lock-img {
  width: 28rpx;
  height: 28rpx;
}
.room-state {
  height:32rpx;
  font-size:18rpx;
  text-align: center;
  line-height: 32rpx;
  background:rgba(255,53,48,1);
  box-sizing:border-box;
  padding-left:8rpx;
  padding-right:8rpx;
  border-radius:10rpx;
}
.feature-live{
  background:rgba(126,209,33,1) !important;
}
.feature-live image{
  width:20rpx;
  height:20rpx;
}
.room-state image{
  width:20rpx;
  height:20rpx;
  margin-top: 8rpx;
  vertical-align: top;
  margin-right:8rpx;
}
.replay-state {
  /* background-color: #F99A1F; */
  width:76rpx;
  height:34rpx;
  border-radius: 4rpx;
  font-size:20rpx;
  text-align: center;
  line-height: 34rpx;
  display: flex;
  align-items: center;  
}
.replay-photo {
  width: 20rpx;
  height: 20rpx;
  margin-right: 9rpx;
}
.replay-state-text {
  font-size:18rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:36rpx;
  text-shadow:0 2rpx 10rpx rgba(0, 0, 0, 0.2);
}
.room-num {
  font-size:18rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:30rpx;
  text-shadow:0rpx 2rpx 8rpx rgba(0, 0, 0, 0.5);
}
.room-info-container {
  width: 100%;
  padding: 16rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 16rpx;
  position: absolute;
  bottom: 0;
  left:0;
}
.room-name {
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(28,29,30,1);
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  height:24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1;
}

.anchor-name {
  margin-top: 13rpx;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(178,180,185,1);
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 22rpx;

  height:22rpx;
}
.anchor-name image{
  width:20rpx;
  height:20rpx;
  border-radius:50%;
  margin-right:12rpx;
}
.invite-btn {
  position:fixed;
  top:67rpx;
  left:30rpx;
  display: flex;
  width:160rpx !important;
  height:54rpx;
  background: rgba(255, 102, 116, 1);
  border-radius: 27rpx;
  padding: 0;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
}
.create-img {
  width: 20rpx;
  height: 20rpx;
}
.create-txt {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

image.del{
  width:30rpx;
  height:30rpx;
  float:right;
  margin-right:0;
}