/* components/room-checkbox/index.wxss */
.room-checkbox-box{
  display: flex;
  flex-direction:row;
  align-items:flex-start;
  position: relative;
}

.room-checkbox-box .checkbox{
  width:36rpx;
  height:36rpx;
  margin-right:22rpx;
  display: inline-block;
  
}
.room-checkbox-box text{
  color:#fff;
  font-size:28rpx;
  height:26rpx;
  display: inline-block;
  margin-right: 12rpx;
}
.room-checkbox-box .checkbox-icon{
  width:28rpx;
  height:28rpx;
  display: inline-block;
  transform: translate(0,5rpx);
}

.room-checkbox-box .tips{
  position: absolute;
  z-index: 9;
  width:482rpx;
  height:105rpx;
  background:rgba(0,0,0,1);
  opacity:0.8;
  border-radius:16rpx;
  transform: translate(-55%,-110%);
  display: flex;
  flex-direction:row;
  align-items:flex-start;
}

.room-checkbox-box .tips .checkbox-message-icon{
  width:24rpx;
  height:24rpx;
  margin-top:36rpx;
  margin-left:24rpx;
  margin-right:20rpx;
}
.room-checkbox-box .tips .tips-text{
  margin-top:21rpx;
  width:373rpx;
  font-size:22rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:32rpx;
}