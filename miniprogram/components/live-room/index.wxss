/* components/live-room/index.wxss */
.live-room-container {
  position: relative;
  width: 100vw;
  height: 100vh;
}
.push-content,
.play-content {
  width: 100vw;
  height: 100vh;
}
.modal-hide {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 2;
}
.poster {
  position: fixed;
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
  justify-content: center;
}
.user-info {
  /* width: 250rpx; */
  position: fixed;
  z-index: 3;
  top: calc(10vh + 32rpx);
  left: 25rpx;
  display: inline-block;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 8rpx;
  color: #fff;
  font-size: 26rpx;
}
.user-info .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}
.user-text {
  margin-right: 30rpx;
  font-weight: 500;
}
.user-count {
  font-size: 22rpx;
}
.end-live {
  margin-right: 30rpx;
  width: 44rpx;
  height: 44rpx;
  background: linear-gradient(140deg, rgba(242, 3, 76, 1), rgba(228, 4, 83, 1));
  border-radius: 22rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.end-live-img {
  width: 24rpx;
  height: 24rpx;
}
.new-one {
  min-width: 200rpx;
  height: 48rpx;
  position: fixed;
  z-index: 2;
  bottom: 568rpx;
  background-color: rgba(255, 13, 64, 0.6);
  color: #fff;
  padding: 0 16rpx;
  border-radius: 8rpx;
  margin-left: 24rpx;
  font-size: 26rpx;
  line-height: 48rpx;
}
.message-view {
  width: 568rpx;
  height: 412rpx;
  position: fixed;
  z-index: 3;
  bottom: 140rpx;
  margin-left: 24rpx;
  /* padding-top: 8rpx; */
}
.message-detail {
  margin-top: 8rpx;
  font-size: 0;
}
.message-detail:first-of-type {
  margin-top: 0;
}
.msg-text {
  display: inline-block;
  background-color: rgba(0, 0, 0, 0.2);
  font-size: 28rpx;
  line-height: 40rpx;
  color: #fff;
  padding: 0 16rpx;
  border-radius: 8rpx;
}
.operate {
  /* position: fixed;
    z-index: 2; */
  display: flex;
  align-items: center;
}
.img-box {
  width: 90rpx;
  height: 90rpx;
  margin: 0 2rpx;
}
.img-box .img {
  width: 100%;
  height: 100%;
}
.bot-bg {
  position: fixed;
  z-index: 1;
  bottom: 0;
  height: 126rpx;
  width: 100vw;
  background: linear-gradient(0deg, rgba(0, 0, 0, 1), rgba(0, 0, 0, 0));
  opacity: 0.6;
}
.mmprise {
  position: fixed;
  z-index: 3;
  bottom: 0;
  width: 100vw;
  height: 126rpx;
  display: flex;
  /* padding-left: 24rpx; */
  /* align-items: baseline; */
}
.mmprise-con {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 0 24rpx;
  display: flex;
  justify-content: center;
}
.message-input {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  align-self: flex-end;
  display: flex;
  align-items: center;
  position: fixed;
}
.message-input .input-conteiner {
  width: 558rpx;
  height: 64rpx;
  background: rgba(244, 244, 244, 1);
  border-radius: 32rpx;
  margin: 0 24rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.input-content {
  flex: 1;
  height: 28rpx;
}
.clear-input {
  width: 36rpx;
  height: 36rpx;
}
.message-input .send-btn {
  width: 120rpx;
  height: 64rpx;
  background: rgba(242, 3, 76, 1);
  border-radius: 32rpx;
  font-size: 30rpx;
  color: #fff;
  line-height: 64rpx;
  text-align: center;
  /* margin-right: 24rpx; */
}
.merchandise-img {
  width: 96rpx;
  height: 126rpx;
}
.merchandise-image {
  width: 100%;
  height: 100%;
}
.input-button {
  /* width: 410rpx; */
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  color: #fff;
  margin-top: 28rpx;
  margin-right: 18rpx;
  font-size: 26rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.2);
}
.prise-img-box {
  position: relative;
}
.prise-count {
  position: absolute;
  height: 26rpx;
  background: rgba(255, 192, 0, 0.9);
  border-radius: 13rpx;
  left: 50%;
  top: 5rpx;
  transform: translateX(-50%);
  min-width: 56rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
  color: #fff;
  font-size: 18rpx;
  text-align: center;
}
.moreTool {
  position: fixed;
  width: 702rpx;
  height: 316rpx;
  left: 24rpx;
  bottom: 24rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 16rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  z-index: 4;
  padding-top: 30rpx;
  transition: all 0.25s 0s ease-in-out;
}

.moreToolHeader {
  display: flex;
  height: 56rpx;
  padding: 0 22rpx 0 40rpx;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.head-left {
  display: flex;
}
.beauty-icon {
  width: 44rpx;
  height: 44rpx;
}
.beauty-text {
  font-size: 30rpx;
  color: #fff;
}
/* .moreToolHeader > view {
	padding: 20px;
	flex: 0 0 auto;
}

.moreToolHeader > image {
	padding: 20px;
	flex: 0 0 auto;
} */

.moreToolHeaderIco {
  width: 56rpx;
  height: 56rpx;
}
.beauty-item {
  display: flex;
  align-items: center;
}
.beautyLabel {
  color: rgba(255, 255, 255, 1);
  font-size: 28rpx;
  margin-left: 20px;
  display: inline-block;
}
.beauty-slide {
  flex: 1;
  padding: 0;
}
.moreToolBody {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.sub-video {
  position: fixed;
  right: 30rpx;
  z-index: 3;
  padding-top: 10rpx;
  padding-right: 10rpx;
}
.small-video {
  width: 105px;
  height: 135px;
}
.play-container {
  width: 190rpx;
  height: 250rpx;
  padding-right: 10rpx;
  padding-top: 10rpx;
  box-sizing: border-box;
  position: relative;
}
.close-icon {
  position: absolute;
  width: 44rpx;
  height: 44rpx;
  right: -20rpx;
  top: -15rpx;
}
.room-exist-container {
  position: fixed;
  margin: 24rpx;
  width: 702rpx;
  height: 219rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 16rpx;
  bottom: 24rpx;
  padding-top: 48rpx;
  text-align: center;
  z-index: 12;
}
.room-exist-tip {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(33, 33, 33, 1);
}
.room-exist-btns {
  display: flex;
  margin-top: 30rpx;
  justify-content: center;
}
.room-btn {
  width: 317rpx;
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  display: flex;
  justify-content: center;
  align-items: center;
}
.end-btn {
  background: rgba(246, 246, 246, 1);
  margin-right: 20rpx;
  color: rgba(242, 3, 76, 1);
}
.relogin-btn {
  background: rgba(242, 3, 76, 1);
  color: rgba(255, 255, 255, 1);
}
