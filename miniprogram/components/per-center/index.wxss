/* components/per-center/index.wxss */
view {
  box-sizing: border-box;
}
.per-center-container {
  width: 100vw;
  height: 100vh;
  background-color: #f5f7fa;
  /* display: flex;
  flex-direction: column; */
}
.per-center-head {
  position: relative;
  width: 100%;
  height: 324rpx;
  /* flex-basis: 324rpx; */
}
.head-background {
  position: absolute;
  width: 100%;
  height: 100%;
}
.title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  /* line-height: 1; */
}
.head-content {
}
.user-info {
  position: absolute;
  z-index: 3;
  top: 178rpx;
  left: 38rpx;
  display: inline-block;
  /* height: 80rpx; */
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 8rpx;
  color: #fff;
  font-size: 26rpx;
}
.avatar-container {
  margin-right: 14rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background-color: #fb485d;
  display: flex;
  justify-content: center;
  align-items: center;
}
.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}
.user-text {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
}
.user-nickname {
  margin-bottom: 8rpx;
}
.role-admin {
  width: 80rpx;
  height: 36rpx;
  position: relative;
}
.role-anchor {
  width: 60rpx;
  height: 36rpx;
  position: relative;
}
.user-role-img {
  width: 100%;
  height: 100%;
}
.user-role-text {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(146, 74, 16, 1);
}
.button-container {
  position: absolute;
  right: 54rpx;
  top: 200rpx;
  width: 162rpx;
  height: 54rpx;
  background: rgba(255, 102, 116, 1);
  border-radius: 27rpx;
  display: flex;
}
.invite-btn {
  display: flex;
  width: 100%;
  height: 100%;
  background: rgba(255, 102, 116, 1);
  border-radius: 27rpx;
  padding: 0;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
}
.invite-btn button {
  width: 100%;
  height: 100%;
  background: rgba(242, 3, 76, 1);
  font-size: 28rpx;
  color: #fff;
  padding: 0;
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.create-img {
  width: 20rpx;
  height: 20rpx;
}
.create-txt {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}
.item-box {
  width: 700rpx;
  margin: 0 auto;
  padding: 40rpx 0;
}
.items {
  width: 100%;
}
.item {
  position: relative;
  width: 690rpx;
  height: 218rpx;
  /* line-height: 120rpx; */
  overflow: hidden;
  box-sizing: border-box;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}
.item:first-child {
  margin-top: 30rpx;
}
.item:last-child {
  margin-bottom: 122rpx;
}
.inner {
  position: absolute;
  top: 0;
}
.inner.txt {
  font-family: Monaco;
  width: 100%;
  /* height: 100%; */
  z-index: 5;
  padding: 20rpx;
  transition: left 0.2s ease-in-out;
  /* white-space: nowrap;
  overflow: hidden; */
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 4rpx 16rpx 0rpx rgba(0, 0, 0, 0.03);
  border-radius: 16rpx;
  text-overflow: ellipsis;
  background-color: #fff;
  display: flex;

}
.inner.del {
  font-family: Monaco;
  /* width: 180rpx; */
  text-align: center;
  z-index: 4;
  right: 0;
  /* color: #fff; */
  width:78rpx;
  height:78rpx;
  background:linear-gradient(0deg,rgba(247,55,78,1),rgba(255,87,107,1));
  border-radius:39rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
}
.del-icon {
  width: 32rpx;
  height: 32rpx;
}
.item-icon {
  width: 64rpx;
  height: 120rpx;
  vertical-align: middle;
  margin-right: 16rpx;
}
.replay-list {
  width: 690rpx;
  margin: 0 auto;
  height: calc(100vh - 324rpx);
  overflow: auto;
}
/* .replay-item {

  display: flex;
  align-items: center;
} */
.replay-item:last-of-type {
  border-bottom: 0;
}
.replay-cover-container {
  width: 148rpx;
  height: 148rpx;
  position: relative;
}

.replay-cover{
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}
.replay-info {
  position: absolute;
  top: 0;
  padding: 10rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
}
.replay-state {
  /* background-color: #F99A1F; */
  width:76rpx;
  height:34rpx;
  border-radius: 4rpx;
  font-size:20rpx;
  text-align: center;
  line-height: 34rpx;
  display: flex;
  align-items: center;  
}
.replay-photo {
  width: 20rpx;
  height: 20rpx;
}
.replay-state-text {
  font-size:18rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:36rpx;
  text-shadow:0 2rpx 10rpx rgba(0, 0, 0, 0.2);
}
.replay-lock {
  height: 28rpx;
  display: flex;
}
.replay-lock-img {
  width: 28rpx;
  height: 28rpx;
}
