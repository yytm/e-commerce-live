/* components/picker/index.wxss */
picker-view-column{
  height:70rpx;
  line-height:70rpx;
}

picker-view{
  height:332rpx;
  width:100%;
  box-sizing:border-box;
  padding:44rpx;
  display: flex;
  flex-direction:column;
}
picker-view-column{
  height:100%;
  flex: 1;
  font-size:30rpx;
  font-weight:400;
}
picker-view-column view{
  width:100%;
  text-align: center;
}

picker-view-column:first-child{
  flex:0 0 50%;
}

.picker-view-botton-box{
  width:100%;
  height:132rpx;
  display: flex;
  flex-direction:row;
  box-sizing: border-box;
  padding: 44rpx;
  padding-top:0;
}
.picker-view-botton{
  height:100%;
  line-height:88rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(238,44,67,1);
  border-radius:16rpx;
  text-align: center;
  width:291rpx;

  font-size:28rpx;
  font-weight:400;
}
.picker-view-botton:first-child{
  margin-right:20rpx;
}
.picker-view-botton:last-child{
  background:rgba(238,44,67,1);
  color:#fff;
}