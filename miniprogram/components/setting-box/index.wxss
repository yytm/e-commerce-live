/* components/setting-box/index.wxss */
.setting-content{
  position: fixed;
  z-index: 20;
  top:0;
  left:0;
  width:100%;
  height:100%;
}
.setting-bg{
  position:absolute;
  width:100%;
  height:100%;
  z-index: 21;
}
.setting-box-container{
  position:fixed;
  z-index: 22;
  width:690rpx;

  bottom: 30rpx;
  left:50%;
  transform:translate(-50%,0);
  background:rgba(255,255,255,1);
  box-shadow:0px 12rpx 44rpx 0px rgba(0, 0, 0, 0.2);
  border-radius:16rpx;
  overflow: hidden;
}

.setting-container{
  
}

.setting-header{
  font-size:30rpx;
  font-weight:500;
  color:rgba(22,23,24,1);
  line-height:40rpx;

  padding:44rpx;
  padding-bottom:0;
}
.beauty .setting-header{
  font-size:24rpx;
  font-weight:400;
  color:rgba(238,44,67,1);
}
.beauty .setting-header text{
  height:22rpx;
  line-height: 22rpx;
}
.beauty .setting-header image{
  width:13rpx;
  height:22rpx;
  margin-right:9rpx;
  margin-top:5rpx;
}

.scd-title{
  font-size:30rpx;
  font-weight:500;
  color:rgba(22,23,24,1);
  line-height:40rpx;
  margin-left: 44rpx;
  margin-top:31rpx;
}

.setting-image-container{
  display:flex;
  flex-direction:row;
  padding:0 44rpx;
  margin-bottom:32rpx;
}
.column{
  display:flex;
  flex-direction:column;
}
.setting-image-item{
  margin-top:21rpx;
  margin-right:83rpx;
  display:flex;
  flex:1;
  flex-direction:column;
}
.setting-image-item:last-child{
  margin-right:0;
}
.setting-item-img{
  width:88rpx;
  height:88rpx;
}
.setting-image-item text{
  font-size:18rpx;
  font-weight:500;
  color:rgba(119,122,129,1);
  height:17rpx;
  line-height: -10rpx;
  text-align: center;
}
.setting-image-item text.icon{
  background:rgba(119,122,129,1);
  border-radius:5rpx;
  color:#fff;
  padding-left:3rpx;
  padding-right:3rpx;
  margin-left:3rpx;
}

.setting-footer{
  height:98rpx;
  width:100%;
  background:rgba(249,250,251,1);
  border-radius:0px 0px 16rpx 16rpx;
  
  display: flex;
  flex-direction:row;
  box-sizing:border-box;
  padding-left:45rpx;
  padding-right:45rpx;
  padding-top:35rpx;
}

.setting-pwd-img{
  width:28rpx;
  height:28rpx;
}
.setting-footer-title,.setting-pwd-button,.setting-pwd-text{
  margin-left:17rpx;
  height:23rpx;
  line-height:25rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(22,23,24,1);
}
.setting-space{
  flex:1;
}
.setting-pwd-button{
  margin-left:31rpx;
  color:rgba(238,44,67,1);
}

setScope:first-child{
  margin-top:32rpx;
}
setScope:last-child{
  margin-top:25rpx;
}

