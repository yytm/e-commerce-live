/* components/setting-scope/index.wxss */
.setting-scope{
  display: flex;
  flex-direction:row;
  align-content:center;
  min-width: 600rpx;
}

.setting-scope text:first-child,.setting-scope text:last-child{
  font-size:28rpx;
  font-weight:400;
  color:rgba(22,23,24,1);
  line-height:40rpx;
  width:65rpx;
}
.setting-scope text:first-child{
  margin-right:24rpx;
}
.setting-scope text:last-child{
  margin-left:36rpx;
  width:48rpx;
}
.scope-box{
  flex: 1;
  height:8rpx;
  border-radius:4px;
  vertical-align:baseline;
  transform: translate(0,-22rpx);
}