/* components/setting-scope/index.wxss */
.setting-scope{
  display: flex;
  flex-direction:row;
  align-content:center;
  min-width: 600rpx;
}

.setting-scope text:first-child,.setting-scope text:last-child{
  font-size:28rpx;
  font-weight:400;
  color:rgba(22,23,24,1);
  line-height:40rpx;
  width:54rpx;
}
.setting-scope text:first-child{
  margin-right:24rpx;
}
.setting-scope text:last-child{
  margin-left:36rpx;
  width:48rpx;
}
.scope-box{
  flex: 1;
  height:8rpx;
  background:rgba(233,239,245,1);
  border-radius:4px;
  margin-top:15rpx;
}
.scope-number{
  position:relative;
  background:rgba(238,44,67,1);
  border-radius:4rpx;
  width:10%;
  height:100%;
}
.scope-hold-box{
  position: absolute;
  right:-16rpx;
  top:-11rpx;
  width:32rpx;
  height:32rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 5rpx 8rpx 0rpx rgba(0, 0, 0, 0.3);
  border-radius:50%;
}
.scope-hodl{
  position: absolute;
  right:-9rpx;
  top:-4rpx;
  width:18rpx;
  height:18rpx;
  background:rgba(238,44,67,1);
  box-shadow:0rpx 5rpx 8rpx 0rpx rgba(0, 0, 0, 0.3);
  border-radius:50%;
}