.modal-tip {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(33, 33, 33, 1);
  line-height: 1;
}
.close-btn-container {
  width: 40rpx;
  height: 40rpx;
  top: 76rpx;
  right: 16rpx;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
}
.close-btn {
  width: 20rpx;
  height: 20rpx;
}
.modal-btns {
  display: flex;
  margin-top: 30rpx;
  justify-content: center;
}
.modal-btn {
  width: 317rpx;
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cancel-btn {
  background: rgba(255, 255, 255, 1);
  margin-right: 20rpx;
  color: rgba(242, 3, 76, 1);
  border: 1px solid rgba(238, 44, 67, 1);
}
.tip {
  position: absolute;
  width: 482rpx;
  height: 70rpx;
  background: rgba(0, 0, 0, 1);
  opacity: 0.8;
  border-radius: 16rpx;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.warn-img {
  width: 26rpx;
  height: 26rpx;
  margin: 0 20rpx 0 23rpx;
}
.warn-text {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}
.avatar-btn {
  /* position: absolute; */
  width: 168rpx;
  height: 168rpx;
  /* left: 50%;
  transform: translateX(-50%); */
