  background-color: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.avatar-img {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}
.input-conteiner {
  margin: 32rpx auto 0;
  width: 482rpx;
  height: 88rpx;
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(239, 242, 246, 1);
  border-radius: 16rpx;
  /* margin: 0 24rpx; */
  padding: 0 20rpx;
}
.input-content {
  height: 88rpx;
  text-align: left;
}
.confirm-btn {
  width: 482rpx;
  height: 88rpx;
  background: rgba(238, 44, 67, 1);
  border-radius: 16rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(254, 254, 254, 1);
}
.invalid {
