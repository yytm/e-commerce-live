<!--miniprogram/components/set-room/index.wxml-->
<wxs src="../lib/stringUtil.wxs" module="stringUtil" />
<view class="set-room-container">
    <view class="user-info">
        <image class="avatar" src="{{userInfo.avatarUrl||'../images/avatar-logo.png'}}" bindload="" binderror=""></image>
        <view class="user-text">
            <view class="" wx:if="{{userInfo.nickName}}">{{stringUtil.substr(userInfo.nickName,8)}}</view>
        </view>
    </view>
    <view class="room-content">
        <view class="room-img-container" bind:tap="chooseImg">
            <image wx:if="{{coverImg}}" class="cover-img" src="{{coverImg}}" />
            <text wx:else class="room-text">直播封面</text>
            <view class="add-icon">
                <image class="plus-ico" src="../images/plus.png">
                </image>
            </view>
        </view>
        <view class="room-name-container {{isFocus?'focus':''}}">
            <input class="room-name-input" value="{{inputValue}}" bindinput="bindKeyInput" bindfocus="focus" bindblur="blur" cursor-spacing="100" placeholder="请输入直播间标题" placeholder-style='color: rgba(255, 255, 255, 0.8); font-size: 14px;' />
        </view>
        <view class="create-button {{isFocus?'focus':''}}" bindtap="createRoom"> 
            立即开播
        </view>
    </view>
    
</view>
