/* miniprogram/components/set-room/index.wxss */
.set-room-container {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 1111;
}
.user-info {
    /* width: 250rpx; */
    position: fixed;
    z-index: 3;
    top: 32rpx;
    left: 25rpx;
    display: inline-block;
    height: 80rpx;
    border-radius: 40rpx;
    background-color: rgba(0, 0, 0, 0.3);
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding-left: 8rpx;
    color: #fff;
    font-size: 26rpx;
}
.user-info .avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 16rpx;
}
.user-text {
    margin-right: 30rpx;
    font-weight: 500;
}
.room-content {
    position: fixed;
    bottom: 60rpx;
    left: 50%;
    transform: translate(-50%, 0);
    display: flex;
    flex-direction: column;
    align-items: center;
}
.room-img-container {
    position: relative;
    width: 200rpx;
    height: 200rpx;
    background:rgba(255,255,255,1);
    opacity: 0.6;
    border-radius: 8rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 36rpx;
}
.cover-img {
    width: 100%;
    height: 100%;
}
.room-text {
    font-size: 28rpx;
    color: rgba(0, 0, 0, 0.5);
}
.add-icon {
    position: absolute;
    width: 54rpx;
    height: 54rpx;
    border-radius: 50%;
    bottom: -20rpx;
    right: -20rpx;
    background: rgb(255, 0, 0);
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rpx;
    box-sizing: border-box;
}
.plus-ico {
    width: 24rpx;
    height: 24rpx;
}
.room-name-container {
    width: 576rpx;
    height: 88rpx;
    background-color: rgba(255, 255, 255, 0.2);
    color: rgba(0, 0, 0, 1);
    display: flex;
    padding-left: 30rpx;
    align-items: center;
    box-sizing: border-box;
    border-radius: 8rpx;
    margin-bottom: 24rpx;
    opacity: 0.2;
}
.room-name-input {
    width: 100%;
}
.create-button {
    width:576rpx;
    height:88rpx;
    line-height: 88rpx;
    text-align: center;
    background:rgba(242,3,76,1);
    border-radius:8rpx;
    color: #fff;
    opacity: 0.3;
}
.focus {
    opacity: 1;
}