/* components/activety/index.wxss */
.activety-content{
  height:332rpx;
  width:100%;
  box-sizing:border-box;
  padding:44rpx;
  display: flex;
  flex-direction:column;
  overflow-y:auto;
}

.picker-view-botton-box{
  width:100%;
  height:132rpx;
  display: flex;
  flex-direction:row;
  box-sizing: border-box;
  padding: 44rpx;
  padding-top:0;
}
.picker-view-botton{
  height:100%;
  line-height:88rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(238,44,67,1);
  border-radius:16rpx;
  text-align: center;
  width:291rpx;

  font-size:28rpx;
  font-weight:400;
}
.picker-view-botton:first-child{
  margin-right:20rpx;
}
.picker-view-botton:last-child{
  background:rgba(238,44,67,1);
  color:#fff;
}

.activity-item{
  width:100%;
  height:101rpx;
  line-height:101rpx;
  display:flex;
  flex-direction:row;
  position:relative;
}
.activity-item image{
  width:60rpx;
  height:60rpx;
  margin-top:21rpx;
  margin-right:21rpx;
  background:green;
}
.activity-item text{
  font-size:28rpx;
  font-weight:500;
  color:rgba(22,23,24,1);
  flex:1;
  display:inline-block;
}

.checkbox.check,.checkbox{
  width:34rpx;
  height:34rpx;
  border-radius:50%;
  border:8rpx solid rgba(255,0,0,1);
  margin-top:28rpx;
  box-sizing: border-box;
}
.checkbox{
  border:1rpx solid rgba(178,180,185,1);
}