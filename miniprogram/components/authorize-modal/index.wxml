<!-- components/authorize/index.wxml -->
<view class="authorize-container" hidden="{{!isShow}}">
        <view class='dialog-mask'></view>
        <view class='dialog-info'>
            <view class='dialog-title'>{{ title }}</view>
            <view class='dialog-sub-title'>{{ subTitle }}</view>
            <view class='dialog-content'>{{ content }}</view>
            <view class='dialog-footer'>
                <button class='dialog-btn' open-type="getUserInfo" bindgetuserinfo='bindGetUserInfo'>
                    {{ confirmText }}
                </button>
            </view>
        </view>
</view>