/* components/authorize/index.wxss */
.dialog-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}
.dialog-info {
  position: fixed;
  z-index: 5000;
  width: 80%;
  max-width: 600rpx;
  top: 50%;
  left: 50%;
  padding-bottom: 80rpx;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #ffffff;
  text-align: center;
  border-radius: 3px;
  overflow: hidden;
}
.dialog-title {
  font-size: 36rpx;
  padding: 30rpx 30rpx 10rpx;
  border-bottom: 1rpx solid #eee;

}
.dialog-sub-title {
    font-size: 32rpx;
    padding: 30rpx 30rpx 10rpx;
    text-align: left;
}
.dialog-content {
  padding: 10rpx 30rpx 20rpx;
  min-height: 80rpx;
  font-size: 32rpx;
  line-height: 1.3;
  word-wrap: break-word;
  word-break: break-all;
  color: #999999;
  text-align: left;
}
.dialog-footer {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  line-height: 90rpx;
  font-size: 34rpx;
}
.dialog-btn {
    width: 500rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-top: 20rpx;
    color: white;
    border-radius: 98rpx;
    padding: 0;
    margin: 0;
    background-color: #3cc51f;
    color: #fff;
}