    <view class="btn-tool">
        <view class="btn invite-btn" wx:if="{{role==='admin'}}">
            <button open-type="share">邀请主播</button>
        </view>
        <view class="btn" id="create" bind:tap="goTo">创建直播</view>
        <view class="btn list-btn" id="list" bind:tap="goTo">直播列表</view>
    </view>
</view>
<view wx:else class="">
