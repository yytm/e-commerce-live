/* miniprogram/pages/index/index.wxss */
.index-container {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100vw;
    height: 100vh;
    background-color: #F6F7FA;
}
.invite-title {
    font-size:32rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(28,29,30,1);
    margin: 40rpx 0 35rpx;
}
.invite-des {
    font-size:28rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(28,29,30,1);
    line-height:40rpx;
    width: 100%;
    box-sizing: border-box;
    padding: 0 20rpx;
}
.btn-tool {
    margin: 0 auto;
    position: absolute;
    bottom: 0;
}
.btn {
    width: 710rpx;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    background: rgba(242,3,76,1);
    border-radius: 8rpx;
    color: #fff;
    font-size: 28rpx;
    margin-bottom: 20rpx;
}
.invite-btn {
    display: flex;

}
.invite-btn button {
    width: 100%;
    height: 100%;
    background: rgba(242,3,76,1);
    font-size: 28rpx;
    color: #fff;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
    align-items: center;
}
.list-btn {
    background:rgba(255,255,255,1);
    border:2rpx solid rgba(242,3,76,1);
    color: #F2034C;
}