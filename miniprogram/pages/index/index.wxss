/* miniprogram/pages/index/index.wxss */
.index-container {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100vw;
    height: 100vh;
}
.btn-tool {
    margin: 0 auto;
    position: absolute;
    bottom: 0;
}
.btn {
    width: 710rpx;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    background: rgba(242,3,76,1);
    border-radius: 8rpx;
    color: #fff;
    font-size: 28rpx;
    margin-bottom: 20rpx;
}
.list-btn {
    background:rgba(255,255,255,1);
    border:2rpx solid rgba(242,3,76,1);
    color: #F2034C;
}