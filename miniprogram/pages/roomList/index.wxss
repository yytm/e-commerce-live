/* pages/index/index.wxss */
/* pages/audience/index.wxss */
.room-list-container {
  padding: 10px 20px 0;
}

.tool-bars {
  display: flex;
  justify-content: space-between;
}

.nav {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #F2034C;
  color: #fff;
  text-align: center;
  border-radius: 10rpx;
}
.invi-btn {
  width: 240rpx;
  height: 80rpx;
  margin: 0;
  display: flex;
}
.invi-btn button {
  width: 100%;
  height: 100%;
  background-color: #F2034C;
  font-size: 32rpx;
  color: #fff;
}
.list-box {
  background-color: #0d70ff;
  color: #fff;
  width: 90vw;
  margin: 3vw;
  padding: 2vw;
}

.text-no-room {
  font-size: 17px;
  color: #afafaf;
  text-align: center;
}

.text-has-room {
  font-size: 12px;
  color: #afafaf;
  text-align: center;
}

.rooms {
  max-height: 75vh;
}

.room-list {
  margin: 2vh 0;

}

.room-list-item {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 15px;
  margin: 10rpx 0;
  width: 100%;
  padding: 0;
  background-color: #F2034C;
  color: #fff;
  border-radius: 10rpx;
  padding-left: 50rpx;
  box-sizing: border-box;
}

.room-list-item button {
  width: 100%;
  color: #fff;
  background-color: #F2034C;
}

.bottom-input {
  padding: 0 1vw;
  position: fixed;
  width: 50vw;
  left: 5vh;
  bottom: 3vh;
  height: 9.4vw;
  /*border-radius: 4px;*/
  color: #3c3c3c;
  border-bottom: 1px solid rgba(13, 112, 255, 0.5);

}


.bottom-btn {
  position: fixed;
  width: 26vw;
  right: 5vh;
  bottom: 3vh;
}



.bottom-btn button {
  background-color: rgba(13, 112, 255, 0.8);
  line-height: 2.3em;
  border-radius: 0;

}


.create-button {
  font-size: 16px;
  color: white;
}

.index-container {
  padding: 2vh 5vw;
}

.input-container {
  margin: 20rpx 0;
  padding: 0 1vw;
  display: flex;
  height: 80rpx;
  color: #3c3c3c;
}

.room-input {
  height: 80rpx;
  border-bottom: 1px solid rgba(13, 112, 255, 0.5);
}

.tip {
  font-size: 24rpx;
}

.button-container {
  margin-top: 40rpx;
  display: flex;
}

.button-container button {
  color: #fff;
  background-color: #F2034C;
  width: 300rpx;
}

