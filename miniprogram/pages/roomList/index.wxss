.list-box {
  background-color: #0d70ff;
  color: #fff;
  width: 90vw;
  margin: 3vw;
  padding: 2vw;
}

.text-no-room {
  font-size: 17px;
  color: #afafaf;
  text-align: center;
}

.text-has-room {
  font-size: 12px;
  color: #afafaf;
  text-align: center;
}

.rooms {
  position: relative;
  top: -30rpx;
  /* max-height: 75vh; */
  border-radius: 16rpx;
  height: calc(100vh - 140rpx);
  background-color: #F6F7FA;
}

.room-list {
  margin: 0;
  box-sizing: border-box;
  padding: 20rpx 20rpx 0;
  display: flex;
  flex-wrap: wrap;
}

.room-list-item {
  width: 335rpx;
  height: 425rpx;
  padding: 0;
  margin: 10rpx;
  color: #fff;
  border-radius: 8rpx;
  box-sizing: border-box;
  position: relative;
}

.room-cover-container {
  width: 335rpx;
  height: 350rpx;
  position: absolute;
}

.room-cover{
  width: 100%;
  height: 100%;
  border-radius: 16rpx 16rpx 0 0;
}
.room-info {
  position: absolute;
  top: 0;
  padding: 10rpx 10rpx 0;
  height: 58rpx;
  display: flex;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
  background:linear-gradient(0deg,rgba(0,0,0,0.3));
  border-radius:16rpx 16rpx 0px 0px;
}
.room-info-bot {
  position: absolute;
  bottom: 10rpx;
  padding: 10rpx 10rpx 0;
  height: 58rpx;
  display: flex;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
  background:linear-gradient(0deg,rgba(0,0,0,0.3));
}
.replay-lock-img {
  width: 28rpx;
  height: 28rpx;
}
.room-state {
  width:96rpx;
  height:32rpx;
  border-radius: 4rpx;
  font-size:18rpx;
  text-align: center;
  line-height: 32rpx;
  background:rgba(255,53,48,1);
  box-sizing:border-box;
  pading:8rpx;
}
.room-state image{
  width:20rpx;
  height:20rpx;
  margin-top: 8rpx;
  vertical-align: top;
  margin-right:8rpx;
}
.replay-state {
  /* background-color: #F99A1F; */
  width:76rpx;
  height:34rpx;
  border-radius: 4rpx;
  font-size:20rpx;
  text-align: center;
  line-height: 34rpx;
  display: flex;
  align-items: center;  
}
.replay-photo {
  width: 20rpx;
  height: 20rpx;
  margin-right: 9rpx;
}
.replay-state-text {
  font-size:18rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:36rpx;
  text-shadow:0 2rpx 10rpx rgba(0, 0, 0, 0.2);
}
.room-num {
  font-size:18rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:30rpx;
  text-shadow:0rpx 2rpx 8rpx rgba(0, 0, 0, 0.5);
}
.room-info-container {
  position: absolute;
  bottom: 10rpx;
  width: 100%;
  padding: 16rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 16rpx;
}
.room-name {
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(28,29,30,1);
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  height:24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1;
}
.anchor-name {
  margin-top: 13rpx;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(178,180,185,1);
  line-height: 1;

  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 22rpx;

  height:22rpx;
}
.anchor-name image{
  width:20rpx;
  height:20rpx;
  border-radius:50%;
  margin-right:12rpx;
}
