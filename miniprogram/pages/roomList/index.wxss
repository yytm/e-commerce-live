}

.tool-bars {
  display: flex;
  justify-content: space-between;
}

.nav {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #F2034C;
  color: #fff;
  text-align: center;
  border-radius: 10rpx;
}
