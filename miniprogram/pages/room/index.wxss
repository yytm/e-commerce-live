/* miniprogram/pages/room/index2.wxss */
page{
  width:100vw;
  height:100vh;
  background: #000;
}

live,.room-leave{
  position: fixed;
  left:0;
  top:0;
  width:100vw;
  height:100vh;
}
.room-leave{
  z-index:1;
}
.room-leave image{
  width:100vw;
  height:100vh;
}
.room-leave text{
  width:100vw;
  text-align:center;
  transform:translate(0,-50vh);
  display:block;
  font-size:32rpx;
  font-weight:500;
  color:rgba(255,254,254,1);
}

.room-avatar{
  position: fixed;
  z-index: 2;
  left:102rpx;
  top:87rpx;
}



.wl-room{
  position:fixed;
  z-index: 3;
  left:30rpx;
  bottom: 466rpx;
  min-width:200rpx;
  height:42rpx;
  background:linear-gradient(90deg,rgba(255,224,81,1),rgba(255,167,29,1));
  border-radius:12rpx;
  display: flex;
  flex-direction:row;
}
.wl-room image{
  width:34rpx;
  height:34rpx;
  margin-left:5rpx;
  margin-top:4rpx;
  margin-right: 7rpx;
}
.wl-room text{
  height:19rpx;
  line-height:19rpx;
  font-size:20rpx;
  font-weight:400;
  color:rgba(140,86,0,1);
  margin-top: 11rpx;
  padding-right: 10rpx;
}

.merchandise-box{
  width:510rpx;
  max-height:384rpx;
  position: fixed;
  z-index: 3;
  left:30rpx;
  bottom: 60rpx;
}
.merchandise-list{
  position:relative;
  display:flex;
  flex-direction:column-reverse;
  max-height:242rpx;
}
.merchandise-item{
  max-width:100%;
  margin-top:6rpx;


  box-sizing:border-box;
  background:rgba(0,0,0,0.3);
  border-radius:8rpx;
  padding:10rpx;
}
.merchandise-item text.merchandise-item-name{
  font-size:24rpx;
  font-weight:500;
  color:rgba(255,200,114,1);
  padding-right: 10rpx;
  white-space: nowrap;
  line-height:32rpx;
}

.merchandise-item{
  font-size:24rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:32rpx;
}

.shop-container{
  position: relative;
  width:590rpx;
  height:128rpx;
  background:rgba(255,255,255,1);
  border-radius:8rpx;
  box-sizing:border-box;
  padding:20rpx;
  margin-top:14rpx;

  display: flex;
  flex-direction:row;
}

.shop-container image{
  height:88rpx;
  width:88rpx;
  margin-right:19rpx;
  background: green;
}
.shop-container .shop-detail-container{
  width:433rpx;
  height:88rpx;
  display:flex;
  flex-direction:column;
}
.shop-container .shop-detail-container text:first-child{
  height:63rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(22,23,24,1);
  line-height:30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical; 
  -webkit-line-clamp:2; 
}

.shop-container .shop-detail-container text:last-child{
  height:23rpx;
  font-size:24rpx;
  font-weight:500;
  color:rgba(238,44,67,1);
  line-height:23rpx;
  margin-top:5rpx;
}

image.shop-close{
  width:10rpx;
  height:10rpx;
  margin:0;
  background-color:#fff;
  position: absolute;
  left:0x;
  top:13rpx;
}

.shop-close-box{
  position: absolute;
  left:-18rpx;
  top:-18rpx;
  width:36rpx;
  height:36rpx;
  background: #fff;
  padding:13rpx;
  box-sizing:border-box;
  box-shadow:0px 2rpx 8rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius:50%;
}

.shop-border{
  border-top: 18rpx solid transparent;
  border-left: 18rpx solid #fff;
  border-bottom: 18rpx solid transparent;
  position: absolute;
  right:-13rpx;
  top:50%;
  transform:translate(0,-50%);
}


.hidden-shop .shop-container{
  display: none;
}
.hidden-shop .merchandise-list{
  max-height:384rpx;
}

.messageBox{
  position:absolute;
  z-index:3;
  width:100vw;
  height:108rpx;
  box-sizing:border-box;
  bottom: 0;
  left:0;
  padding:10rpx 30rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 10rpx 20rpx 0px rgba(0, 0, 0, 0.2);
  align-content:center;
}

.message-border{
  width:690rpx;
  height:88rpx;
  background:rgba(255,255,255,1);
  border:2rpx solid rgba(239,242,246,1);
  border-radius:16rpx;
  box-sizing:border-box;
  padding-left:34rpx;

  display: flex;
  flex-direction:row;
}
.message-send{
  width:108rpx;
  height:72rpx;
  background:rgba(238,44,67,1);
  border-radius:16rpx;
  text-align: center;
  line-height: 72rpx;
  font-weight:400;
  color:rgba(254,254,254,1);
  font-size:28rpx;
}

.messageBox input{
  height:100%;
  flex: 1;
  margin-right:15rpx;
  font-size: 28rpx;
}

.icon-box{
  position:fixed;
  z-index:2;
  bottom:51rpx;
  right:24rpx;
  width:88rpx;
}

.setting-shop-img,
.setting-heard-img,
.setting-joinlive-img,
.setting-share-img,
.setting-message-img,
.setting-heard-title{
  width:88rpx;
  height:88rpx;
}
.setting-heard-title{
  height:23rpx;
  text-align: center;
  font-size:18rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  display: block;
  margin-top: -30rpx;
  margin-bottom: 20rpx;
}
