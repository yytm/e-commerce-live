/* miniprogram/pages/goodsList/index.wxss */
page{
    display:flex;
    flex-direction:column;
}
.list-head {
  position: relative;
  width: 100%;
  height: 170rpx;
}
.list-head-bg {
  position: absolute;
  width: 100%;
  height: 100%;
}
.list-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  /* line-height: 1; */
}
.rooms {
  position: relative;
  top: -10rpx;
  border-radius: 16rpx;
  height: calc(100vh - 140rpx);
  background-color: #F6F7FA;
  box-sizing: border-box;
  padding:42rpx 30rpx;
  flex:1;
}
back{
  position: fixed;
  z-index:2;
  left:30rpx;
  top:87rpx;
}
.shop-container{
  position: relative;
  height:188rpx;
  background:rgba(255,255,255,1);
  box-sizing:border-box;
  padding:20rpx;
  margin-top:14rpx;

  display: flex;
  flex-direction:row;

  border-radius:16rpx;
}

.shop-container image{
  height:148rpx;
  width:148rpx;
  margin-right:19rpx;
}
.shop-container .shop-detail-container{
  height:100%;
  display:flex;
  flex-direction:column;
  flex:1;
}
.shop-container .shop-detail-container text:first-child{
  height:80rpx;
  font-size:28rpx;
  line-height:38rpx;
  font-weight:400;
  color:rgba(22,23,24,1);
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical; 
  -webkit-line-clamp:2; 
}

.shop-container .shop-detail-container text:last-child{
  height:23rpx;
  font-size:24rpx;
  font-weight:500;
  color:rgba(238,44,67,1);
  line-height:23rpx;
  margin-top:20rpx;
}